@model CodeOverFlowProject.ViewModels.EditUserPasswordViewModel
@{
    ViewBag.Title = "ChangePassword";
}


<h2>Login</h2>
<form action="~/Account/ChangePassword" method="post" novalidate="novalidate" class="was-validated">
    @Html.AntiForgeryToken()
    <div class="form-row mx-auto" style="width:300px">
        <div class="form-group col-md-12">
            <label>Email</label><br />
            @Html.HiddenFor(temp => temp.Email)
            <input type="email" id="Email" disabled name="Email" placeholder="Email" required="required" autofocus="autofocus" value="@Model.Email" />
        </div>
        <div class="form-group col-md-12">
            <label>Password</label><br />
            <input type="password" id="password" name="Password" placeholder="Password" required="required" value="" minlength="6" />
            <div class="valid-feedback">
                looks good!
            </div>
            <div class="invalid-feedback">
                Password must contain atleas 6 characters
            </div>

        </div>
        <div class="form-group col-md-12">
            <label>Confirm Password</label><br />
            <input type="password" id="password" name="ConfirmPassword" placeholder="Confirm Password" required="required" value="" minlength="6" />
            <div class="valid-feedback">
                looks good!
            </div>
            <div class="invalid-feedback">
                Password must contain atleas 6 characters
            </div>

        </div>
        <div class="form-group col-md-12">

            <button type="submit" class="btn MySelector">CHANGE PASSWORD</button>
            <div class="text-danger"> @Html.ValidationSummary()</div>
        </div>

    </div>

</form>

<script>
   $("a[href='/Account/ChangePassword']").attr("id","active")
</script>



